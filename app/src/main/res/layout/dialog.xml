<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="나이를 입력해주세요"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/textAge"
        android:layout_centerHorizontal="true"
        android:descendantFocusability="blocksDescendants"
        app:np_dividerColor="@color/ssumtago_orange"
        app:np_max="55"
        app:np_min="15"
        app:np_selectedTextColor="@color/ssumtago_orange" />

    <Button
        android:id="@+id/btn_numberPickerDialog_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_gray_border"
        android:text="입력"
        android:textColor="@color/black"
        android:textSize="16dp" />

</RelativeLayout>