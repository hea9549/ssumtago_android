<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_survey_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/survey_back_24"
    tools:context="com.lovepago.ssumtago.Presentation.Activity.SurveyActivity">

    <ImageButton
        android:id="@+id/btn_survey_before"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_survey_before_enable"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_survey_next"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_survey_next_enable"
        android:padding="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_survey_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/survey_top_box"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Scene#1: 만남"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_survey_before"
        app:layout_constraintLeft_toRightOf="@+id/btn_survey_before"
        app:layout_constraintRight_toLeftOf="@+id/btn_survey_next"
        app:layout_constraintTop_toTopOf="@+id/btn_survey_before" />

    <TextView
        android:id="@+id/tv_survey_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="10dp"
        android:text="상대방과 몇번의 만남 후에 연인으로 발전 혹은 실패했나요?"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_survey_section" />

    <ProgressBar
        android:id="@+id/progress_survey_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_survey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:progress="40" />

